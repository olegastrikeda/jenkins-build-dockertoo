node {
    def app
    stage('Clone') {
        checkout scm
    }
    stage('Build image') {
        app = docker.build("olegastrikeda/nginx")
    }
    stage('Run image') {
        docker.image('olegastrikeda/nginx').withRun('-p 81:81') { c ->
            sh 'docker ps'
            sh 'sleep 5'  // Attente de 5 secondes
            sh 'curl -s localhost:81'  // Utilisation de localhost au lieu de 127.0.0.1
        }
    }
}
